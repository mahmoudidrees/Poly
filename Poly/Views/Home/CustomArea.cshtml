@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Custom Area"] - google_map</title>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/map_custom.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });</script>
</head>
<body>
    <div class="title"> Custom Area  </div>
    <div id="wrapper">
        <div class="divForm">
            <form>
                <div class="form-group">
                    <label for="title">Title </label>
                    <input type="text" class="form-control" id="InputTitle">
                </div>
                <div class="form-group">
                    <label for="title">Start Date </label>
                    <input type="date" class="form-control" placeholder ="" id="InputStartDate">
                </div>
                <div class="form-group">
                    <label for="title">End Date </label>
                    <input type="date"  class="form-control" placeholder="" id="InputEndDate">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Active</label>
                </div>

            </form>
            <button id="save-button" class="btn btn-primary btn-lg btn-block" style="margin-bottom:10px;">Save</button>
            <br />
            <button id="delete-button" class="btn btn-danger btn-lg btn-block" style="display: none; margin-bottom:10px">Delete Selected Shape</button>
            <br />
            <button id="clear-button" style="display: none; margin-bottom:10px" class="btn btn-secondary  btn-lg btn-block"> Clear Selected Shape</button>

            <div id="output"></div>
        </div>

        <div id="map" style="height:800px;"></div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjGX23bKEeGoArU_o40bjv2rU0mxzv2vk&callback=initMap&libraries=drawing"></script>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
  

</body>
</html>




